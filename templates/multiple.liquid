{% layout "test-layout" %}
{% block content %}
    <section class="demo section section-multiple" data-scroll-index="0" id="demo">
		<div class="row">
			<div class="large-12 columns">
				<h3 class="section-title">Try out the new multiple drawers!</h3>
				<div class="drawer-position">
					<h4 class="section-subtitle"><span>Choose target drawer:</span></h4>
					<ul>
						<li>
							<input type="radio" id="left" name="target" value="left" checked="checked"/>
							<label for="left" class="">Left</label>
						</li>
						<li>
							<input type="radio" id="top" name="target" value="top"/>
							<label for="top" class="">Top</label>
						</li>
						<li>
							<input type="radio" id="right" name="target" value="right"/>
							<label for="right" class="">Right</label>
						</li>
					</ul>
				</div>
				<div class="drawer-effect">
					<h4 class="section-subtitle"><span>Choose effect:</span></h4>
					<p class="notice">Because of the nature of some of the effects they are not compliant with the top position drawer</p>
					<ul>
						<li><a href="#" class="button active alternate" data-effect="pure-effect-1">Slide in on top</a></li>
						<li><a href="#" class="button no-top alternate" data-effect="pure-effect-2">Reveal</a></li>
						<li><a href="#" class="button no-top alternate" data-effect="pure-effect-3">Slide along</a></li>
						<li><a href="#" class="button no-top alternate" data-effect="pure-effect-4">Reverse slide out</a></li>
						<li><a href="#" class="button alternate" data-effect="pure-effect-5">Scale Down Pusher</a></li>
						<li><a href="#" class="button no-top alternate" data-effect="pure-effect-6">Scale Up</a></li>
						<li><a href="#" class="button alternate" data-effect="pure-effect-7">Scale and Rotate Pusher</a></li>
						<li><a href="#" class="button no-top alternate" data-effect="pure-effect-8">Fall Down</a></li>
						<li><a href="#" class="button no-top alternate" data-effect="pure-effect-9">Push</a></li>
					</ul>
				</div>
			</div>
		</div>
	</section>
{% endblock %}

